// components=>images.js
import React from "react";
import {
  Text,
  StyleSheet,
  View,
  Image,
  FLatlist,
  FlatList,
  Button,
  Alert,
  TouchableOpacity,
} from "react-native";

export const Natureimage = (props) => {
  return (
    <View>
      <Image
        source={props.ImgSrc}
        style={{ width: 300, height: 300, marginLeft: 50 }}
      />
      <Text style={styles.textstyle}>{props.textData}</Text>
    </View>
  );
};

const styles = StyleSheet.create({
  textstyle: {
    textAlign: "center",
    color: "blue",
    fontSize: 20,
    fontFamily: "monospace",
  },
});
export default Natureimage;


